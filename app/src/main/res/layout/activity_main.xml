<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rocafellabob.fittigerlife.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Counter"
        android:id="@+id/Calorie"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Excersise"
        android:id="@+id/Excersise"
        android:layout_below="@+id/Calorie"
        android:layout_alignRight="@+id/Calorie"
        android:layout_alignEnd="@+id/Calorie"
        android:layout_alignLeft="@+id/Calorie"
        android:layout_alignStart="@+id/Calorie" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Goal"
        android:id="@+id/Goal"
        android:layout_below="@+id/Excersise"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Excersise"
        android:layout_alignStart="@+id/Excersise" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome back! Your fitness journey starts here"
        android:id="@+id/Welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Excersise"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/Excersise" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Goal"
        android:layout_alignEnd="@+id/Goal" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_above="@+id/Excersise"
        android:layout_toRightOf="@+id/Welcome"
        android:layout_toEndOf="@+id/Welcome" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textClock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/chronometer"
        android:layout_toEndOf="@+id/chronometer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Progress to your goal"
        android:id="@+id/textView"
        android:layout_above="@+id/progressBar2"
        android:layout_alignLeft="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get advice"
        android:id="@+id/Advice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Goal"
        android:layout_toEndOf="@+id/chronometer"
        android:layout_alignLeft="@+id/Goal"
        android:layout_alignStart="@+id/Goal" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignTop="@+id/chronometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="282dp"
        android:layout_marginStart="282dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Workout Buddy"
        android:id="@+id/Buddy"
        android:layout_below="@+id/Advice"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_toRightOf="@+id/Welcome"
        android:layout_toEndOf="@+id/Welcome" />

</RelativeLayout>
